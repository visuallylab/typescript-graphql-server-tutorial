{
  "name": "typescript-graphql-server-tutorial",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.ts",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/app.ts --type-check",
    "start:debug": "yarn start --debug",
    "start:prod": "TS_NODE_PROJECT=tsconfig.prod.json node -r tsconfig-paths/register -r source-map-support/register build/app",
    "start:watch": "nodemon",
    "build": "tsc --pretty -p tsconfig.json",
    "tslint-check": "tslint-config-prettier-check ./tslint.json"
  },
  "license": "MIT",
  "dependencies": {
    "apollo-server-koa": "^2.9.0",
    "koa": "^2.8.1",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "pg": "^7.12.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.5",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.16",
    "typeorm-typedi-extensions": "^0.2.3"
  },
  "devDependencies": {
    "@types/koa": "^2.0.49",
    "@types/koa-router": "^7.0.40",
    "@types/node": "^10.12.15",
    "@types/pg": "^7.11.0",
    "apollo-server-testing": "^2.3.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.4",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.19.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
